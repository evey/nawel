# Nawel API - Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# JWT Configuration (REQUIRED in Production)
JWT_SECRET=generate-a-secure-random-secret-minimum-32-characters-long
JWT_ISSUER=NawelApi
JWT_AUDIENCE=NawelApp
JWT_EXPIRATION_MINUTES=60

# Database Configuration
DB_CONNECTION_STRING=Server=localhost;Port=3306;Database=nawel;User=your_user;Password=your_password;

# OpenGraph API (Optional - for product info extraction)
OPENGRAPH_API_KEY=your-api-key-from-opengraph-io

# Email Configuration (Optional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=no-reply@nawel.com
SMTP_FROM_NAME=Nawel - Listes de NoÃ«l
SMTP_USE_SSL=true

# Application Settings
USE_SQLITE=false
ALLOWED_HOSTS=*

# File Storage
MAX_FILE_SIZE_MB=5
